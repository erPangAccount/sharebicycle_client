
/* pages/order.wxss */
.container {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content:start;
  align-items:center;
  background-color: #f8f8f9;
  padding: 0;
  margin: 0;
}

.header {
  flex: 1;
  flex-direction: row;
  width: 100%;
  height: 20%;
}

.head-img {
  height: 20%;
  text-align: center;
}

.head-img text {
  font-size: 28px;
}

.split {
  height: 2%;
  width: 100%;
  margin: 2% 0; 
}

.head-title {
  height: 20%;
  text-align: center;
}

.head-title text {
  font-size: 32px;
}

.username {
  font-size: 22px;
}

.content {
  flex: 1;
  width: 100%;
}

.content-item {
  text-align: center;
}

.content-item-title {
  text-align: right;
}

.bottom {
  flex-shrink:0;
  position: fixed;
  bottom: 0;
  width: 100%;
}

.container {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content:start;
  background-color: #f8f8f9;
  padding: 0;
  margin: 0;
}

.header {
  width: 100%;
}

.content {
  flex: 1;
  width: 100%;
}

.bottom {
  flex-shrink:0;
  width: 100%;
  position: fixed;
  bottom: 0;
}

.scroll-view-item {
  margin: 2% 1%;
  padding: 3% 1%;
  background-color: #e9eaec;
  border-radius: 5%;
}

.item-title {
  display: flex;
  margin-bottom: 2%;
}

.item-content {
 padding: 2%;
}

.item-content-title {
  display: flex;
  font-size: 14px;
  font-weight: 700;
  margin: 2% 0; 
}

.item-content-content {
  font-size: 12px;
}

.font-red {
  color: red;
  font-weight: 700;
}

.content-item {
  display: flex;
  margin: 1%;
}

.text-l {
  text-align: left;
}

.text-r {
  text-align: right;
}


.fl-1 {
  flex: 1;
}